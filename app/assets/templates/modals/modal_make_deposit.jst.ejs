<!-- Note: removed the "fade" class from the modal to avoid the scroll bug... -->

<div id="modal-make-deposit" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Make Deposit</h3>
  </div>
  <div class="modal-body">
    <div class="form-horizontal">
      <div class="control-group">
        <label for="make-deposit-date-selector" class="control-label">Transaction Date:</label>
        <div class="controls">
          <input type="text" id="make-deposit-date-selector" class="input-medium"/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Amount:</label>
        <div class="controls">
          <input type="text" placeholder="Amount To Add" class="deposit-amount" autofocus/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Note:</label>
        <div class="controls">
          <input type="text" placeholder="Add a Note:" class="deposit-note"/>          
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button id="make-deposit" class="btn btn-primary" data-dismiss="modal">Ok</button>
  </div>
</div>

